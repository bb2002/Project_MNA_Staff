<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/staff_main_nav"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_nav_home"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_home"
            android:scaleType="centerInside"
            android:padding="12dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_nav_worklog"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_calander"
            android:scaleType="centerInside"
            android:padding="12dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_nav_reqjoin"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_request"
            android:scaleType="centerInside"
            android:padding="12dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/main_nav_settings"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="12dp"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_container"
        android:layout_above="@id/staff_main_nav"/>
</RelativeLayout>